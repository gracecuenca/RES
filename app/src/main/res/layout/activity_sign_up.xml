<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <Button
        android:id="@+id/btnConsumer"
        android:layout_width="146dp"
        android:layout_height="64dp"
        android:layout_marginTop="70dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Consumer"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ARtextView" />

    <Button
        android:id="@+id/btnBusiness"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:layout_marginTop="35dp"
        android:background="@android:color/holo_green_light"
        android:text="Business"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConsumer" />

    <TextView
        android:id="@+id/ARtextView"
        android:layout_width="165dp"
        android:layout_height="42dp"
        android:layout_marginTop="91dp"
        android:gravity="center"
        android:text="Are you a..."
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>